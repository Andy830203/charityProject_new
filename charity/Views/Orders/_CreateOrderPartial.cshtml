@model charity.ViewModels.CreateOrderViewModel

<div class="col-md-6">
    <form id="createForm" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- 買家 ID -->
        <div class="form-group">
            <label asp-for="BuyerId" class="control-label text-start d-block"></label>
            <select asp-for="BuyerId" class="form-control" asp-items="ViewBag.BuyerList">
                <option value="">請選擇買家</option>
            </select>
            <span asp-validation-for="BuyerId" class="text-danger"></span>
        </div>

        <!-- 輸入商品 ID 與數量 -->
        <div class="form-group">
            <label for="ProductIdInput" class="control-label text-start d-block">商品 ID</label>
            <input id="ProductIdInput" type="text" class="form-control" placeholder="輸入商品 ID" />
        </div>
        <div class="form-group">
            <label for="QuantityInput" class="control-label text-start d-block">數量</label>
            <input id="QuantityInput" type="number" class="form-control" min="1" placeholder="輸入數量" />
        </div>
        <button type="button" id="addItem" class="btn btn-secondary mb-3">新增商品</button>

        <!-- 已新增的商品列表 -->
        <h5 class="mt-3">已新增的商品列表</h5>
        <div id="orderItems">
            @foreach (var item in Model.OrderItems) {
                <div class="order-item mb-3">
                    <p>商品 ID: @item.ProductId</p>
                    <p>數量: @item.Quantity</p>
                </div>
            }
        </div>

        <!-- 提交按鈕 -->
        @* <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> 提交訂單
            </button>
        </div> *@
    </form>
</div>
