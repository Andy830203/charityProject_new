@model OrderDetailsViewModel

<div class="container">
    <!-- 訂單基本資訊 -->
    <div class="row">
        <div class="col-md-6">
            <!-- 訂單編號 -->
            <div class="form-group">
                <label class="control-label text-start d-block">訂單編號</label>
                <p class="form-control-static">@Model.OrderId</p>
            </div>

            <div class="form-group">
                <label class="control-label text-start d-block">買家ID</label>
                <p class="form-control-static">@Model.BuyerId</p>
            </div>
            <!-- 買家名稱 -->
            <div class="form-group">
                <label class="control-label text-start d-block">買家名稱</label>
                <p class="form-control-static">@Model.BuyerName</p>
            </div>

            <!-- 訂單時間 -->
            <div class="form-group">
                <label class="control-label text-start d-block">訂購時間</label>
                <p class="form-control-static">@(Model.OrderTime?.ToString("yyyy/MM/dd HH:mm") ?? "尚無資料")</p>
            </div>

            <!-- 訂單總金額 -->
            <div class="form-group">
                <label class="control-label text-start d-block">總金額</label>
                <p class="form-control-static">@String.Format("{0:C}", Model.TotalPrice)</p>
            </div>

            <!-- 訂單狀態 -->
            <div class="form-group">
                <label class="control-label text-start d-block">訂單狀態</label>
                <p class="form-control-static">@Model.Status</p>
            </div>
        </div>
    </div>

    <!-- 訂單明細 -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h5>商品列表</h5>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>商品ID</th>
                        <th>商品名稱</th>
                        <th>數量</th>
                        <th>單價</th>
                        <th>小計</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items) {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@String.Format("{0:C}", item.Price)</td>
                            <td>@String.Format("{0:C}", item.Subtotal)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
