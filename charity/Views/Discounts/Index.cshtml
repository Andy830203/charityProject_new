@model IEnumerable<charity.Models.Discount>

@{
    ViewData["Title"] = "Index";
}

<h1>折扣</h1>

<p>
    <a class="btn btn-info" asp-action="Create"><i class="fa-solid fa-plus"></i>新增折扣</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i> 修改</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i> 資訊</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-user-xmark"></i> 刪除</a>
                <button class="btn btn-info" onclick="showDetails(@item.Id)">View Details</button>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        async function showDetails(id) {
            try {
                // 發送 fetch 請求獲取 Partial View
                let response = await fetch(`/Discounts/GetDetails/${id}`);

                // 確認回應成功
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                // 獲取回應的 HTML 內容
                let data = await response.text();

                // 使用 SweetAlert2 顯示 Partial View 的內容
                Swal.fire({
                    title: 'Discount Details',
                    html: data, // 將 Partial View 的 HTML 內容直接放入 SweetAlert 中
                    showCloseButton: true,
                    focusConfirm: false,
                    confirmButtonText: 'OK'
                });
            } catch (error) {
                // 在錯誤情況下顯示錯誤訊息
                Swal.fire('Error', 'Could not load details.', 'error');
                console.error('Fetch error:', error);
            }
        }
    </script>
}
