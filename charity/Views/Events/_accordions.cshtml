@{
    var item = Model.Item;
    var index = Model.Index;

    @* 為下列手風琴內部元素id設變數 *@
    var accId = $"accordion{index}";
    // var accLoc = $"accordionLocation{Model.Id}";
    // var accPhoto = $"accordionPhoto{Model.Id}";
    // var accPeriod = $"accordionPeriod{Model.Id}";
    // var headLoc = $"headingLocation{Model.Id}";
    var headLoc = $"headingLocation{index}";
    var headPhoto = $"headingPhoto{index}";
    var headPeriod = $"headingPeriod{index}";
    // var clpLoc = $"collapseLocation{Model.Id}";
    var clpLoc = $"collapseLocation{index}";
    var clpPhoto = $"collapsePhoto{index}";
    var clpPeriod = $"collap{index}";
    @* 區段結束 *@
    //摺疊全部手風琴的變數
    var indexTarget = $"more-info{index}";
    var orderIdName = $"listOrder{index}";
    // var locs = $"loc{Model.Id}";
    // var pics = $"pic{Model.Id}";
    // var times = $"time{Model.Id}";
    // 手風琴所佔欄數
    int colWidth = 12;
}

@* 將三個手風琴改成一個手風琴 *@

<!-- 活動地點 -->
<tr class="collapse @indexTarget" id=@orderIdName draggable=true">
    <td colspan="@colWidth">
        <div class="accordion" id="@accId">
            <div class="accordion-item">
                <h2 class="accordion-header" id="@headLoc">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@clpLoc" aria-expanded="false" aria-controls="@clpLoc">
                        活動地點順序
                    </button>
                </h2>
                <div id="@clpLoc" class="accordion-collapse collapse" aria-labelledby="@headLoc" data-bs-parent="#@accId">
                    <div class="accordion-body">
                        <!--<p>測試內容</p>-->
                        <div class="ajaxEventLocations" data-id="@item.Id"></div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="@headPhoto">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@clpPhoto" aria-expanded="false" aria-controls="@clpPhoto">
                        活動照片
                    </button>
                </h2>
                <div id="@clpPhoto" class="accordion-collapse collapse" aria-labelledby="@headPhoto" data-bs-parent="#@accId">
                    <div class="accordion-body">
                        <div class="ajaxEventImgs" data-id="@item.Id"></div>
                    </div>
                </div>
            </div>
            @* <div class="accordion-item">
                <h2 class="accordion-header" id="@headPeriod">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@clpPeriod" aria-expanded="false" aria-controls="@clpPeriod">
                        活動時段
                    </button>
                </h2>
                <div id="@clpPeriod" class="accordion-collapse collapse" aria-labelledby="@headPhoto" data-bs-parent="#@accId">
                    <div class="accordion-body">
                        <div class="ajaxEventPeriods" data-id="@Model.Id"></div>
                    </div>
                </div>
            </div> *@
        </div>
    </td>
</tr>
