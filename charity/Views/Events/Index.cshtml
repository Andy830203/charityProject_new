@* @model IEnumerable<charity.Models.Event> *@
@model IEnumerable<EventsViewModel>

@{
    var ModelWithIndice = Model.Select((value, index) => (index, value));
}

@{
    ViewData["Title"] = "Index";
}

@section Styles
{
    @* <link href="~/css/yteventsstyles.css" rel="stylesheet" /> *@
    <link href="~/owlcarousel2/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/owlcarousel2/css/owl.theme.default.min.css" rel="stylesheet" />
    <style>
        img.event-img {
            width: 75px;
            height: 75px;
        }

        img.carousel-img {
            width: 200px;
            height: 200px;
            object-fit: cover; /* 保持圖片比例並覆蓋整個區域 */
        }

        

    </style>
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead class="table-primary">
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var (index, item) in ModelWithIndice)
    {
        @* block start: 摺疊全部手風琴的變數 *@
        var indexTarget = $"more-info{index}";
        var orderIdName = $"listOrder{index}";
        @* block end *@
        <tr>
            <td>
                <button class="btn btn-info" type="button" data-bs-toggle="collapse" data-bs-target=".@indexTarget" aria-expanded="false" aria-controls="@orderIdName">
                    ...
                </button>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            </tr>
        var pair = new { Item = item, Index = index };
        <partial name="_accordions" for=@pair></partial>
}
    </tbody>
</table>

@section Scripts
{
    <script src="~/owlcarousel2/js/owl.carousel.min.js"></script>
    <script src="~/js/eventcarousel.js"></script>
    <script src="~/js/EventLocPartial.js" type="text/javascript"></script>
