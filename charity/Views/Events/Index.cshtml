@model IEnumerable<charity.Models.Event>

@{
    ViewData["Title"] = "Index";
}

@section Styles
{
    <style>
        .yt-fixed-box {
            /* for block */
            background-color: dimgray;
            display: block;
            padding: 20px;
            position: fixed;
            top: 80px;
            right: 50px;

            /* for link */
            text-decoration: none;
            color: cornsilk;
        }

        .yt-fixed-box:hover {
            color: yellow;
        }
    </style>
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
