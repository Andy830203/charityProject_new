@model IEnumerable<charity.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<h1>會員列表</h1>

<!-- 進階搜尋表單 -->
<div class="container">
    <form id="searchForm" method="get" asp-action="Index">
        <div class="form-group">
            <label for="name">姓名:</label>
            <input type="text" id="name" name="name" value="@Context.Request.Query["name"]" class="form-control" />
        </div>

        <div class="form-group">
            <label>性別:</label><br />
            <div class="checkbox-group" style="display: flex; gap: 10px;">
                <label>
                    <input type="checkbox" name="gender" value="male"
                    @(Context.Request.Query["gender"].ToString() == "male" ? "checked" : "") /> 男
                </label>
                <label>
                    <input type="checkbox" name="gender" value="female"
                    @(Context.Request.Query["gender"].ToString() == "female" ? "checked" : "") /> 女
                </label>
            </div>
        </div>

        <div class="form-group">
            <label for="startDate">出生日期(起):</label>
            <input type="date" id="startDate" name="startDate" value="@Context.Request.Query["startDate"]" class="form-control" />
        </div>

        <div class="form-group">
            <label for="endDate">出生日期(止):</label>
            <input type="date" id="endDate" name="endDate" value="@Context.Request.Query["endDate"]" class="form-control" />
        </div>

        <div class="form-group">
            <label>帳號狀態:</label><br />
            <div class="checkbox-group" style="display: flex; gap: 10px;">
                <label>
                    <input type="checkbox" name="status" value="1"
                    @(Context.Request.Query["status"].ToString().Contains("1") ? "checked" : "") /> 正常
                </label>
                <label>
                    <input type="checkbox" name="status" value="2"
                    @(Context.Request.Query["status"].ToString().Contains("2") ? "checked" : "") /> 停權
                </label>
            </div>
        </div>

        <br />
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-magnifying-glass" style="color:red"></i>搜尋
        </button>
    </form>
</div>

<p>
    <a asp-action="Create" class="btn btn-info">
        <i class="fa-solid fa-user-plus"></i> 新增會員
    </a>
</p>

<table class="table display">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.RealName)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Birthday)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.ImgName)</th>
            <th>@Html.DisplayNameFor(model => model.StatusNavigation)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RealName)</td>
                <td>
                    @if (item.Gender == true)
                    {
                        <span>男</span>
                    }
                    else
                    {
                        <span>女</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Birthday)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>
                    <img src="@Url.Content(item.ImgName)" alt="會員照片" style="width: 150px; height: 150px;" />
                </td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span>正常</span>
                    }
                    else
                    {
                        <span>停權</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-regular fa-pen-to-square"></i> 修改
                    </a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-circle-info"></i> 資訊
                    </a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-user-xmark"></i> 刪除
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('.table').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/Chinese-traditional.json"
            }
        });
    });
</script>
