@model charity.ViewModels.ProductImgViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>修改</h1>

<h4>商品資訊</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product.Id" />
            <div class="form-group">
                <label asp-for="product.Name" class="control-label"></label>
                <input asp-for="product.Name" class="form-control" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Seller" class="control-label"></label>
                @Html.DropDownList("seller", (SelectList)ViewData["Seller"], "請選擇", new { @class = "form-control" })
                <span asp-validation-for="product.Seller" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Category" class="control-label"></label>
                @* <input asp-for="Category" class="form-control" /> *@
                @Html.DropDownList("category", (SelectList)ViewData["CategoryList"], "請選擇", new { @class = "form-control" })
                <span asp-validation-for="product.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Price" class="control-label"></label>
                <input asp-for="product.Price" class="form-control" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.OnShelf" class="control-label"></label>
                <select asp-for="product.OnShelf" class="form-select">
                    <option value="true">上架</option>
                    <option value="false">不在架上</option>
                </select>
                <span asp-validation-for="product.OnShelf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.OnShelfTime" class="control-label"></label>
                <input asp-for="product.OnShelfTime" class="form-control" />
                <span asp-validation-for="product.OnShelfTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Description" class="control-label"></label>
                <input asp-for="product.Description" class="form-control" />
                <span asp-validation-for="product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Instock" class="control-label"></label>
                <input asp-for="product.Instock" class="form-control" />
                <span asp-validation-for="product.Instock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Uploaded Images</label>
                <div>
                    @foreach (var img in Model.ExistingImages) {
                        <div style="display: inline-block; margin-right: 10px;">
                            <img src="@img.ImgName" alt="Product Image" style="width: 100px; height: auto;" />
                            <input type="checkbox" name="DeleteImages" value="@img.ImgId" /> Delete
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <label>Upload New Images</label>
                <input type="file" name="UploadedImages" class="form-control" multiple />
            </div>
            <div class="form-group">
                <br>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> 保存
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <hr>
    <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-file-lines"></i> 回到列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
