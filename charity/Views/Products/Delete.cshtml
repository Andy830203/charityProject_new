@model charity.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>刪除</h1>

<h3>確定要刪除嗎?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OnShelf)
        </dt>
        <dd class = "col-sm-10">
            @* @Html.DisplayFor(model => model.OnShelf) *@
            @if (Model.OnShelf == true) {
                <span>上架中</span>
            }
            else {
                <span>目前不在架上</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OnShelfTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OnShelfTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Instock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Instock)
        </dd>
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellerNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerNavigation.Id)
        </dd> *@
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash-can"></i> 刪除
        </button>
        <div>
            <hr>
            <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-file-lines"></i> 回到列表</a>
        </div>
    </form>
</div>
