@model charity.ViewModels.ProductImgViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>刪除</h1>

<h3>確定要刪除嗎?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.CategoryNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.CategoryNavigation.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.SellerNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.SellerNavigation.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.OnShelf)
        </dt>
        <dd class="col-sm-10">
            @* @Html.DisplayFor(model => model.product.OnShelf) *@
            @if (Model.product.OnShelf == true) {
                <span>上架中</span>
            }
            else {
                <span>目前不在架上</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.OnShelfTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.OnShelfTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Instock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Instock)
        </dd>
        <dt class="col-sm-2">
            圖片
        </dt>
        <dd class="col-sm-10">
            @if (Model.productImgs != null && Model.productImgs.Any()) {
                <div>
                    @foreach (var imagePath in Model.productImgs) {
                        <img src="@Url.Content(imagePath)" alt="" style="width: 300px; height: auto; margin-right: 10px;margin-bottom: 10px;">
                    }
                </div>
            }
            else {
                <img src="@Url.Content("/images/non-found.jpg")" alt="Alternate Text" style="width: 300px; height: auto; margin-right: 10px;" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.product.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash-can"></i> 刪除
        </button>
        <div>
            <hr>
            <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-file-lines"></i> 回到列表</a>
        </div>
    </form>
</div>
