@model IEnumerable<ProductImgViewModel>
@inject CharityContext context

@{
    ViewData["Title"] = "Index";
}

<h1>商品列表</h1>

<p>
    <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus"></i> 新增商品</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.product.Name)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.product.Category)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.OnShelf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.OnShelfTime)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.product.Description)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.product.Instock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.SellerNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.CategoryNavigation)
            </th>
            <th>
                圖片
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.product.Name)
            </td>
            @* <td>
                    @Html.DisplayFor(modelItem => item.product.Category)
            </td> *@
            <td>
                    @Html.DisplayFor(modelItem => item.product.Price)
            </td>
            <td>
                    @* @Html.DisplayFor(modelItem => item.product.OnShelf) *@
                    @if (item.product.OnShelf == true) {
                        <span>上架中</span>
                    }
                    else {
                        <span>目前不在架上</span>
                    }
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.product.OnShelfTime)
            </td>
            @* <td>
            @Html.DisplayFor(modelItem => item.product.Description)
            </td> *@
            <td>
                    @Html.DisplayFor(modelItem => item.product.Instock)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.product.SellerNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product.CategoryNavigation.Name)
            </td>
            <td>
                @* <img src="@Url.Content(")" alt="Product Image" style="width: 100px; height: auto; margin-right: 10px;" /> *@
                    @if (item.productImgs.Count > 0) {
                        <img src="@Url.Content(item.productImgs[0])" alt="Alternate Text" style="width: 100px; height: auto; margin-right: 10px;" />
                    }
                    else {
                        <img src="" alt="Alternate Text" style="width: 100px; height: auto; margin-right: 10px;" />
                    }
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.product.Id"><i class="fa-regular fa-pen-to-square"></i> 修改</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.product.Id"><i class="fa-solid fa-circle-info"></i> 資訊</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.product.Id"><i class="fa-solid fa-trash-can"></i> 刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
