@model charity.Models.LocationImg

@{
    ViewData["Title"] = "Create";
}

<h1>新增</h1>

<h4>地點圖片</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LId" class="control-label"></label>
                <select asp-for="LId" class ="form-control" asp-items="ViewBag.LId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ImgName" class="control-label"></label>
                <input asp-for="ImgName" class="form-control" />
                <span asp-validation-for="ImgName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回地點圖片列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
